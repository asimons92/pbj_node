# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Connection
# Local: mongodb://127.0.0.1:27017/pbj
# Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/pbj
MONGODB_URI=mongodb://127.0.0.1:27017/pbj

# JWT Secret - CHANGE THIS IN PRODUCTION
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here-min-32-characters

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Redaction Service URL (Python/Presidio microservice)
REDACTION_SERVICE_URL=http://localhost:8000

# CORS - Comma-separated list of allowed origins
# Example: http://localhost:5173,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
